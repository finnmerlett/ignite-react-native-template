{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "linterOptions": {
    "exclude": [
      "**/*.ejs"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "App.js",
    "app",
    "e2e",
    "test",
    "storybook",
    "./*.config.js"
  ],
  "extends": "expo/tsconfig.base"
}
